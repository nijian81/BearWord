<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgetPasswordFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="#1f9d85">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/xmlTopLeftIconWidth"
            android:layout_height="@dimen/xmlTopLeftIconHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/xmlTopLeftIconMargin"
            android:background="@null"
            android:onClick="login"
            android:scaleType="centerInside"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="修改邮箱"
            android:textColor="@color/xmlWhiteLineColor"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/top"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/xmlModifyPasswordLittleGrayTextMargin"
        android:layout_marginTop="@dimen/xmlModifyPasswordLittleGrayTextMargin"
        android:background="@null"
        android:cursorVisible="true"
        android:hint="通过密码修改"
        android:textSize="@dimen/xmlModifyPasswordLittleGrayTextSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_bg_password">

        <EditText
            android:id="@+id/newMailbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:cursorVisible="true"
            android:drawablePadding="@dimen/xmlModifyPasswordLeftPadding"
            android:hint="新邮箱"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_bg_password">

        <EditText
            android:id="@+id/currentPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:cursorVisible="true"
            android:drawablePadding="@dimen/xmlModifyPasswordLeftPadding"
            android:hint="当前密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:textSize="15sp" />

    </RelativeLayout>

       <RelativeLayout
        android:id="@+id/affirmModify"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corners_bg_pass_wxz">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:text="确认修改"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>