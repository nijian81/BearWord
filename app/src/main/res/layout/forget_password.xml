<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modifyPasswordFragment"
    android:background="#ebebeb"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ebebeb" />

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1f9d85">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/xmlTopLeftIconWidth"
            android:layout_height="@dimen/xmlTopLeftIconHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/xmlTopLeftIconMargin"
            android:background="@null"
            android:onClick="login"
            android:scaleType="centerInside"
            android:src="@mipmap/fanhui" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/xmlTopTitleHeight"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlTopTitleHeight"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingRight="@dimen/xmlTopRightTextPaddingSize"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/top"
        android:background="#ffffff" />

    <RelativeLayout
        android:id="@+id/input_old_password"
        android:layout_marginLeft="@dimen/xmlModifyPasswordMiddleLeftMargin"
        android:layout_width="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_height="@dimen/xmlMiddleContentHeight">

        <EditText
            android:id="@+id/mailbox"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/xmlMiddleContentHeight"
            android:drawablePadding="@dimen/xmlModifyPasswordLeftPadding"
            android:background="@null"
            android:inputType="text"
            android:cursorVisible="true"
            android:hint="请输入注册邮箱" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="@dimen/xmlModifyPasswordLittleGrayTextMargin"
        android:layout_marginRight="@dimen/xmlModifyPasswordLittleGrayTextMargin"
        android:layout_height="@dimen/xmlGrayLineHeight"
        android:layout_below="@+id/input_old_password"
        android:background="@color/xmlGrayLineColor" />


</RelativeLayout>